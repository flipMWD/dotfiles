term screen-256color
startup_message off
altscreen on
autodetach on
hardcopy_append on
defscrollback 5000
maptimeout 50

bind j focus next
bind k focus prev
bind s split
bind q only
bind x remove
bind X lockscreen
bind , title

# man screen(1) /^STRING ESCAPES
caption always '%{= kd} %-Lw%{+b kW}|%n%f %t|%{= kd}%+Lw %-=%S %{.g} %u@%H %{.W} %d/%m %0c %{-}'
