gca() {
	git branch
	git status --short
	read "msg?Commit Message: "
	if [ $? -eq 0 ] ; then
		git add .
		git commit -m "${msg:-No comment}"
		[ "$(git branch -vv | grep -E '^\*.*\[.*\].*$')" ] && git push
	fi
}
