bindsym XF86AudioLowerVolume exec --no-startup-id ~/.i3/pactl-find-sink -m
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.i3/pactl-find-sink -p

# Screen Brightness Controls
# bindsym XF86MonBrightnessUp exec "xbacklight -inc 10; notify-send 'brightness up'"
